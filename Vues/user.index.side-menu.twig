<div class="header-mobile-button"><span class="icon-muffin"></span></div>
<aside data-spy="affix" data-offset-top="400" class="side-menu">
    {% if webdata.session.muffin_id %}
        <div class="profile-aside" user-profile data-load-target="User/p">
            <div class="aside-picture" style="background-image: url(data:image/jpeg;base64,{{ infos.picture }})"> </div>
            <div class="aside-title">
                <span> {{ infos.prenom|lower }} {{ infos.nom|lower }} </span>
                <div>
                    <span class="tiny-container"><span class="icon-repeat"></span> {{ uexch|length }}</span>
                    <span class="tiny-container"><span class="icon-write"></span> {{ udrafts|length }}</span>
                    <span class="tiny-container"><span class="icon-bubbles"></span> {{ ureunions|length }}</span>
                </div>
            </div>
        </div>
    {% endif %}
    <ul role="side-menu">
        {% if webdata.session.muffin_id %}
            <li>
                <a class="btn" data-load-target="User/home"><span class="icon-muffin"></span><span class='side-legend'> Muffin</span></a>
            </li>
            <li>
                <a class="btn" data-load-target="User/me"><span class="icon-chef"></span><span class='side-legend'> Projets</span></a>
            </li>
            <li>
                <a class="btn" data-load-target="Echanges/index"><span class="icon-repeat"></span><span class='side-legend'> Échanges</span></a>
            </li>
            <li>
                <a class="btn" data-load-target="Reunion/index"><span class="icon-bubbles"></span><span class='side-legend'> Réunions</span></a>
            </li>
            <li>
                <a class="btn" data-load-target="Calendar/index"><span class="icon-calendar3"></span><span class='side-legend'> Planning</span></a>
            </li>
            <li class="hidden-mobile">
                <a class="btn" data-load-target="Drafts/all" data-expand><span class="icon-news"></span><span class='side-legend'> Drafts</span></a>
            </li>
            <li class="separator"></li>
            <li>
                <a class="btn" data-load-target="Params/index"><span class="icon-nut"></span><span class='side-legend'> Paramètres</span></a>
            </li>
            <li class="hidden-mobile">
                <a class="btn" data-load-target="Stats/index"><span class="icon-bars2"></span><span class='side-legend'> Stats</span></a>
            </li>
            <li class="separator"></li>
            <li class="hidden-mobile">
                <a class="btn" data-load-target="About/index"><span class="icon-info3"></span><span class='side-legend'> À propos</span></a>
            </li>
            <li class="hidden-mobile">
                <a class="btn" href="Login/logout"><span class="icon-exit"></span><span class='side-legend'> Bye</span></a>
            </li>
        {% endif %}
        {#
        #}
    </ul>
    <div role="description">
    </div>
</aside>
